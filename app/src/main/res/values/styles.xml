<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListItems">
        <item name="android:paddingTop">@dimen/item_padding</item>
        <item name="android:paddingBottom">@dimen/item_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText" parent="ListItems">
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="SubtitleText" parent="ListItems">
        <item name="android:textSize">@dimen/subtitle_font</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
